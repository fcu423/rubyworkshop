<div class="row">
<%= form_for @post, url: {action: "create"}, :html => {:class => "form-horizontal center"} do |form| %>
    <div class="form-group">
        <%= form.label :title, "Title:",class: "col-md-4" %>
        <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= form.label :body, "Content:", class: "col-md-4" %>
        <%= form.text_area :body, size: "60x12", class: "form-control" %>
    </div>
    <%= form.submit "Create", class: "btn btn-default"  %>
<% end %>
</div>